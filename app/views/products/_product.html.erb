<div id="<%= dom_id product %>">
  <p>
    <strong>Restaurant:</strong>
    <%= product.restaurant_id %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Cost:</strong>
    <%= product.cost %>
  </p>

  <p>
    <strong>Created at:</strong>
    <%= product.created_at %>
  </p>

  <p>
    <strong>Updated at:</strong>
    <%= product.updated_at %>
  </p>

</div>
